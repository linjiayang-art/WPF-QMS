<UserControl
    x:Class="SicoreQMS.Views.TestRequestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SicoreQMS.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="White"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Padding="10,10"
            FontSize="20"
            FontWeight="Bold"
            Text="试验任务需求单" />

        <Grid Grid.Row="1" Margin="10">
            <DockPanel Grid.Column="3">
                <TextBlock
                    Padding="10"
                    FontSize="20"
                    Text="试验类别" />
                <TextBlock
                    Margin="10"
                    materialDesign:HintAssist.HelperText="试验类别:"
                    materialDesign:HintAssist.Hint="试验类别">
                    <ItemsControl x:Name="cbt" ItemsSource="{Binding TestTypes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox
                                    Margin="0,0,10,0"
                                    Command="{Binding DataContext.CheckCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding Label}"
                                    Content="{Binding Label}"
                                    IsChecked="{Binding IsCheck}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </TextBlock>

            </DockPanel>
        </Grid>
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBox
                    Width="250"
                    MinWidth="100"
                    MaxWidth="5000"
                    Margin="10"
                    HorizontalContentAlignment="Left"
                    materialDesign:HintAssist.HelperText="产品名称"
                    materialDesign:HintAssist.Hint="产品名称"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    BorderThickness="1"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding ProdName}" />

            </StackPanel>

            <TextBox
                Grid.Column="1"
                Width="250"
                MinWidth="100"
                MaxWidth="5000"
                Margin="10"
                HorizontalContentAlignment="Left"
                materialDesign:HintAssist.HelperText="产品型号"
                materialDesign:HintAssist.Hint="产品型号"
                materialDesign:TextFieldAssist.HasClearButton="True"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProdType}" />
            <TextBox
                Grid.Column="2"
                Width="250"
                MinWidth="100"
                MaxWidth="5000"
                Margin="10"
                HorizontalContentAlignment="Left"
                materialDesign:HintAssist.HelperText="生产批次/子批"
                materialDesign:HintAssist.Hint="生产批次/子批"
                materialDesign:TextFieldAssist.HasClearButton="True"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProdLot}" />

            <TextBox
                Grid.Column="3"
                Width="250"
                MinWidth="100"
                MaxWidth="5000"
                Margin="10"
                HorizontalContentAlignment="Left"
                materialDesign:HintAssist.HelperText="数量"
                materialDesign:HintAssist.Hint="数量"
                materialDesign:TextFieldAssist.HasClearButton="True"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding Qty}" />





        </Grid>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <TextBox
                x:Name="txtTestLot"
                Grid.Column="0"
                Width="250"
                MinWidth="150"
                MaxWidth="5000"
                Margin="10"
                materialDesign:HintAssist.HelperText="试验批次"
                materialDesign:HintAssist.Hint="试验批次"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding TestLot}" />

            <StackPanel Grid.Column="1">
                <TextBox
                    x:Name="txtTestQty"
                    Grid.Column="2"
                    Width="250"
                    MinWidth="150"
                    MaxWidth="5000"
                    Margin="10"
                    HorizontalContentAlignment="Left"
                    materialDesign:HintAssist.HelperText="试验数/编号"
                    materialDesign:HintAssist.Hint="试验数/编号"
                    BorderThickness="1"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding ProdNumber}" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBox
                    x:Name="txtProdTestSta"
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="250"
                    MinWidth="150"
                    Margin="10"
                    HorizontalContentAlignment="Left"
                    materialDesign:HintAssist.HelperText="试验依据"
                    materialDesign:HintAssist.Hint="试验依据"
                    BorderThickness="1"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Prodstandard}" />
            </StackPanel>

        </Grid>
        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="testNo"
                Grid.Column="0"
                Width="250"
                MinWidth="150"
                MaxWidth="5000"
                Margin="10"
                materialDesign:HintAssist.HelperText="试验流水号"
                materialDesign:HintAssist.Hint="试验流水号"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding TestNo}" />
            <TextBox
                x:Name="ProdNo"
                Grid.Column="1"
                Width="250"
                MinWidth="150"
                MaxWidth="5000"
                Margin="10"
                materialDesign:HintAssist.HelperText="生产流水号"
                materialDesign:HintAssist.Hint="生产流水号"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProdNo}" />
        </Grid>

        <Grid Grid.Row="5" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />

            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="2"
                Margin="10"
                Command="{Binding BtnSumbit}"
                CommandParameter="Sumbit"
                Content="提交申请" />
            <Button
                Grid.Column="3"
                Margin="10"
                Command="{Binding BtnSumbit}"
                CommandParameter="Clear"
                Content="清空表单" />
        </Grid>
    </Grid>
</UserControl>
