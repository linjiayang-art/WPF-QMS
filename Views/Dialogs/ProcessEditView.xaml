                            </CheckBox>
            -->
            <!--  确保这里的绑定是正确的  -->
            <!--
                            <TextBlock Text="{Binding Label}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>-->

            <TextBox
                Grid.Row="2"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="选中设备"
                AcceptsReturn="True"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />


            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="使用设备"
                AcceptsReturn="True"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="设备不允许修改"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />


            <TextBox
                Grid.Row="3"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="投入数"
                materialDesign:TextFieldAssist.HasClearButton="True"
                AcceptsReturn="True"
                IsEnabled="False"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProcessItem.InputQty}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <!--  IsEnabled="{Binding IsStartEnabled}"  -->
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="产出数"
                materialDesign:TextFieldAssist.HasClearButton="True"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProcessItem.OutQty}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <DatePicker
                Grid.Row="4"
                Grid.Column="0"
                Margin="5"
                materialDesign:HintAssist.Hint="选择开始日期"
                SelectedDate="{Binding ProcessItem.StartDate}"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
            <DatePicker
                Grid.Row="4"
                Grid.Column="1"
                Margin="5"
                materialDesign:HintAssist.Hint="选择结束日期"
                SelectedDate="{Binding ProcessItem.EndDate}"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />


            <TextBox
                Grid.Row="5"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="任务开始备注"
                materialDesign:TextFieldAssist.HasClearButton="True"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProcessItem.BeginRemark, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="任务结束备注"
                materialDesign:TextFieldAssist.HasClearButton="True"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding ProcessItem.EndRemark, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />



        </Grid>
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding SumbitBtn}"
                CommandParameter="Edit"
                Content="确认修改" />

        </StackPanel>

    </Grid>

</UserControl>
